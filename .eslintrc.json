{
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    "customElements": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [ "error", 2 ],
    "linebreak-style": [ "error", "unix" ],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ],
    "no-console": [ "warn" ]
  }
}
